# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Service Key for Admin tasks (archiving/purging)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# AI PROVIDER CONFIGURATION (OpenRouter-First Architecture)
# ============================================================================
# Priority: OPENROUTER (cloud) â†’ OLLAMA (local fallback)
# OpenRouter is PRIMARY for reliability; Ollama is optional fallback

# OpenRouter Configuration (PRIMARY - Cloud AI)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=google/gemini-flash-1.5
OPENROUTER_FALLBACK_MODEL=anthropic/claude-3-haiku
OPENROUTER_MAX_CALLS_PER_DAY=100

# Ollama Configuration (FALLBACK - Local AI)
# Only used when OpenRouter fails
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3:mini
OLLAMA_FALLBACK_MODEL=qwen2.5:3b

# Job Source API Keys (Get these from respective providers)
# See README.md for instructions on how to obtain keys.
# Adzuna (developer.adzuna.com)
ADZUNA_APP_ID=
ADZUNA_API_KEY=

# ZipRecruiter (www.ziprecruiter.com/publishers/program-overview)
ZIPRECRUITER_KEY=

# Jooble (jooble.org/api/about)
JOOBLE_KEY=

# Careerjet (careerjet.com/partners/api/)
CAREERJET_KEY=

# USAJOBS (developer.usajobs.gov)
USAJOBS_API_KEY=

# RapidAPI (optional aggregator)
RAPIDAPI_KEY=

# SerpAPI (Google Jobs)
SERPAPI_KEY=

# Vercel Configuration (Optional)
VERCEL_TOKEN=
